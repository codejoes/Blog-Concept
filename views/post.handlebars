<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <div class="col-md-6">
      <h3>Update your post!</h3>
      <form class="form update-post-form">
        <div class="form-group">
          <label for="updated-title">Post title:</label>
          <input class="form-input" type="text" id="updated-title" name="updated-title" />
        </div>
        <div class="form-group">
          <label for="updated-text">Post text:</label>
          <textarea class="form-input" id="updated-text" name="updated-text"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
        </div>
      </form>
    </div>
  {{#if comments.length}}
    <div class="project-list">
      <h3>Current Comments:</h3>

      {{#each comments as |comment|}}
      <div class="row mb-2 center">
        <div class="col-md-4">
          <p>{{comment.text}}</p>
          <p>Commented by {{comment.user.name}}</p>
          <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
  {{/if}}
</div>
